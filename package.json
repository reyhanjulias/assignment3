{
  "name": "my-website",
  "version": "1.0.0",
  "description": "A modern website project with Tailwind CSS and Bun.js",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "tw:dev": "npx tailwindcss -i src/input.css -o src/output.css --watch",
    "tw:build": "npx tailwindcss -i src/input.css -o src/output.css",
    "dev": "npx vite --port 4000",
    "build": "npx vite build",
    "serve": "npx vite preview",
    "start": "npm run dev"
  },
  "keywords": [
    "html",
    "tailwindcss",
    "javascript",
    "bun",
    "website"
  ],
  "author": "Reyha",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@types/bun": "latest",
    "typed.js": "^2.1.0"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
